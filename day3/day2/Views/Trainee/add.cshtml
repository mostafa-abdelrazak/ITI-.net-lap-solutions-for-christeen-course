@model List<Department>

<div class="container mt-5">
    <h1 class="mb-4">Add Trainee</h1>
    <form action="/Trainee/Add" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="Name" required>
        </div>
        <div class="form-group">
            <label for="img">Image URL:</label>
            <input type="text" class="form-control" id="img" name="Img">
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="Address">
        </div>
        <div class="form-group">
            <label for="grade">Grade:</label>
            <input type="number" class="form-control" id="grade" name="Grade" min="1" max="10" required>
        </div>
        <div class="form-group">
            <label for="deptId">Department:</label>
            <!--<input type="number" class="form-control" id="deptId" name="Dept_Id" required> -->
            <select class="form-control" id="deptId" name="Dept_Id" required>
                @foreach(Department d in Model)
                {
                    <option value="@d.Id">@d.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>